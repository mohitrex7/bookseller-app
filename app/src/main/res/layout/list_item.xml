<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:orientation="horizontal">
    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/listCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="4dp"
            android:layout_margin="5dp">
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/book_image"
                    android:layout_margin="15dp"
                    android:layout_width="110dp"
                    android:layout_height="140dp"
                    android:src="@drawable/imageholder"/>

                <TextView
                    android:id="@+id/bookName"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/book_image"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="20dp"
                    android:autoSizeTextType="uniform"
                    android:gravity="left"
                    android:text="BookName"
                    android:textColor="#666666"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/publication"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@+id/book_image"
                    android:layout_below="@+id/bookName"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:autoSizeMaxTextSize="150sp"
                    android:autoSizeMinTextSize="8sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="left"
                    android:text="Publication"
                    android:textColor="#666666"
                    android:textSize="10dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_below="@+id/publication"
                    android:layout_toRightOf="@+id/book_image"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/priceCol">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/price"
                        android:text="price"
                        android:textSize="17dp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/discountedPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:text="discount"
                        android:textColor="#A1A1A1"
                        android:textSize="17dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_below="@+id/priceCol"
                    android:layout_toRightOf="@+id/book_image"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/starInNum"
                        android:text="rate"
                        android:textSize="17dp"
                        android:textColor="#000000" />
                    <ImageView
                        android:id="@+id/star1"
                        android:layout_marginLeft="5dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_green_star"/>
                    <ImageView
                        android:id="@+id/star2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_green_star"/>
                    <ImageView
                        android:id="@+id/star3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_green_star"/>
                    <ImageView
                        android:id="@+id/star4"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_green_star"/>
                    <ImageView
                        android:id="@+id/star5"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_green_star"/>


                </LinearLayout>

            </RelativeLayout>
            
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.cardview.widget.CardView>