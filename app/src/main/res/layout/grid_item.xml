<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:orientation="horizontal">
    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/gridCard"
            android:layout_width="150dp"
            android:layout_height="220dp"
            app:cardCornerRadius="4dp"

            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="125dp"
                    android:id="@+id/book_image"
                    android:layout_gravity="center"
                    android:src="@drawable/imageholder" />

                <TextView
                    android:id="@+id/bookName"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/image"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:autoSizeMaxTextSize="150sp"
                    android:autoSizeMinTextSize="8sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="left"
                    android:text="BookName"
                    android:textColor="#666666"
                    android:textSize="20dp" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_below="@+id/bookName"
                    android:id="@+id/publication"
                    android:text="publication"
                    android:gravity="left"
                    android:autoSizeTextType="uniform"
                    android:textColor="#B2B2B2"
                    android:autoSizeMaxTextSize="50dp"
                    android:autoSizeMinTextSize="5sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/publication"
                    android:layout_marginTop="4dp"
                    android:id="@+id/priceCol">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:id="@+id/price"
                        android:text="price"
                        android:textSize="11dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/discountedPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:text="discount"
                        android:textStyle=""
                        android:textColor="#A1A1A1"
                        android:textSize="11dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/priceCol"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:id="@+id/starInNum"
                        android:text="price"
                        android:textSize="11dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000000" />
                    <ImageView
                        android:id="@+id/star1"
                        android:layout_marginLeft="5dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_green_star"/>
                    <ImageView
                        android:id="@+id/star2"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_green_star"/>
                    <ImageView
                        android:id="@+id/star3"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_green_star"/>
                    <ImageView
                        android:id="@+id/star4"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_green_star"/>
                    <ImageView
                        android:id="@+id/star5"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_green_star"/>


                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.cardview.widget.CardView>