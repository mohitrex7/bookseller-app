<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:backgroundTint="#fff"
        android:clickable="false"
        android:elevation="2dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="20dp"
                android:id="@+id/img_noti_each"
                android:src="@drawable/img_noti_each"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/heading1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Achemist"
                    android:textColor="#584F4F"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/offer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20% off price on purchse before 15 June"
                    android:textColor="#676464"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/extraText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Wishlisting!"
                    android:textColor="#676464"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 days ago"
                    android:textColor="#989898"
                    android:textSize="12dp" />
            </LinearLayout>



        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>