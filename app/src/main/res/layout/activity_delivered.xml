<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfdfdf">

    <ImageView
        android:id="@+id/image_odetails"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="12dp"
        android:background="@drawable/detailsbackgrnd"/>

    <TextView
        android:id="@+id/booktitle_odetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Title"
        android:layout_centerHorizontal="true"
        android:textColor="#050101"
        android:textSize="20sp"
        android:layout_marginTop="210dp"/>

    <TextView
        android:id="@+id/ordernum_odetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order no:"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="255dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="2dp"
        android:background="@drawable/detailsbackgrnd"/>

    <TextView
        android:id="@+id/totalamt_odetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Amount:"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="285dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="2dp"
        android:background="@drawable/detailsbkgrnd2"/>

    <TextView
        android:id="@+id/trackid_odetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tracking id:"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="315dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="2dp"
        android:background="@drawable/detailsbkgrnd2"/>

    <TextView
        android:id="@+id/odate_odetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Date:"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="345dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="2dp"
        android:background="@drawable/detailsbkgrnd2"/>

    <TextView
        android:id="@+id/shipadd_odetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shipping Address:"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="375dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="2dp"
        android:background="@drawable/detailsbackgrnd"/>

    <TextView
        android:id="@+id/status_odetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status:"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="405dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="2dp"
        android:background="@drawable/detailsbackgrnd"/>

</RelativeLayout>