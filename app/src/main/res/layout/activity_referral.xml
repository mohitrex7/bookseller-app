<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".referral">
<RelativeLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
   >
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/whiteback"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:onClick="back"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/bgimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back"
        android:layout_marginTop="50dp"
        android:layout_margin="60dp"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/ref"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:requiresFadingEdge="horizontal"
            android:src="@drawable/referral_system_1400x1050" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share the Joy of  buying books by inviting your friends"
        android:fontFamily="@font/berkshire_swash"
        android:layout_below="@id/bgimg"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:text="and both of you win Rs.10"
        android:textSize="15dp"
        android:textColor="#000"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/berkshire_swash"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t2"
        android:text="Share Your Code"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="150dp"
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="#686868"/>

    <ImageView
        android:id="@+id/copy"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_copy"
        android:layout_below="@+id/t3"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/copylink"
        android:layout_marginLeft="40dp"
        />

    <TextView
        android:id="@+id/copylink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/t3"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="https://play.google.com/store/apps/details?id=com.kpshopy.learnweel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="share"
        android:textColor="#ffff"
        android:background="@drawable/rounded_button"
        android:textStyle="bold"
        android:id="@+id/share"
        android:onClick="share"
        android:layout_below="@id/copylink"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>




</RelativeLayout>
</ScrollView>