<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:padding="8dp">




            <ImageView
                android:id="@+id/imageView"
                android:layout_width="118dp"
                android:layout_height="116dp"
                android:padding="4dp" />


            <TextView

                android:id="@+id/textViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/imageView"
                android:text="Design Analysis And Algorithm"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDiscount"
                android:layout_width="101dp"
                android:layout_height="19dp"
                android:layout_below="@+id/textViewName"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@id/imageView"
                android:text="RS 40 off"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#307832" />


            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewDiscount"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="117dp"
                android:layout_marginRight="117dp"
                android:layout_toEndOf="@+id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:text="RS 100"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold" />

            <Button
                android:id="@+id/delete_button"
                android:layout_width="74dp"
                android:layout_height="26dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="10dp"
                android:background="#495ED6"
                android:text="Delete"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/btnIncrease"
                android:layout_width="33dp"
                android:layout_height="28dp"
                android:layout_above="@+id/delete_button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="10dp"
                card_view:srcCompat="@drawable/ic_plus" />

            <TextView
                android:id="@+id/txtQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/delete_button"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="13dp"
                android:layout_toStartOf="@+id/btnIncrease"
                android:layout_toLeftOf="@+id/btnIncrease"
                android:text="1"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/btnDecrease"
                android:layout_width="28dp"
                android:layout_height="26dp"
                android:layout_above="@+id/delete_button"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginBottom="11dp"
                android:layout_toStartOf="@+id/txtQuantity"
                android:layout_toLeftOf="@+id/txtQuantity"
                card_view:srcCompat="@drawable/ic_minus" />

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Total"
                android:layout_toRightOf="@+id/txtQuantity"
                android:textAlignment="center"
                android:textSize="13dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal" />




        </RelativeLayout>


    </androidx.cardview.widget.CardView>






</LinearLayout>
