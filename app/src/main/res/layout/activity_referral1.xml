<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#076CC9"
    tools:context=".Referral1">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/rect15" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">


        <View
            android:id="@+id/ref_view_rect"
            android:layout_width="0dp"
            android:layout_height="131dp"
            android:layout_marginStart="64dp"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="152dp"
            android:layout_marginEnd="65dp"
            android:layout_marginRight="65dp"
            android:layout_marginBottom="131dp"
            android:background="@drawable/ref_rect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/sell_view_rect"
            android:layout_width="282dp"
            android:layout_height="131dp"
            android:layout_marginStart="64dp"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="65dp"
            android:layout_marginRight="65dp"
            android:layout_marginBottom="200dp"
            android:background="@drawable/ref_rect"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ref_view_rect">

        </View>

        <TextView
            android:id="@+id/ref_text_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refferal Points"
            android:textSize="30dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@+id/ref_view_rect"
            app:layout_constraintRight_toRightOf="@+id/ref_view_rect"
            app:layout_constraintTop_toTopOf="@+id/ref_view_rect"
            />
        <TextView
            android:id="@+id/ref_text_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500"
            android:textSize="45dp"
            android:textColor="#000000"
            android:layout_marginTop="60dp"
            app:layout_constraintLeft_toLeftOf="@+id/ref_view_rect"
            app:layout_constraintRight_toRightOf="@+id/ref_view_rect"
            app:layout_constraintTop_toTopOf="@+id/ref_view_rect"
            />
        <TextView
            android:id="@+id/selling_text_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="selling Points"
            android:textSize="30dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@+id/sell_view_rect"
            app:layout_constraintRight_toRightOf="@+id/sell_view_rect"
            app:layout_constraintTop_toTopOf="@+id/sell_view_rect"
            />
        <TextView
            android:id="@+id/selling_text_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500"
            android:textSize="45dp"
            android:textColor="#000000"
            android:layout_marginTop="60dp"
            app:layout_constraintLeft_toLeftOf="@+id/sell_view_rect"
            app:layout_constraintRight_toRightOf="@+id/sell_view_rect"
            app:layout_constraintTop_toTopOf="@+id/sell_view_rect"
            />

        <TextView
            android:id="@+id/activity_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="Rewards"
            android:textColor="#ffffff"
            android:textSize="26dp"
            app:layout_constraintHorizontal_bias="0.281"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="41dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_24"
            app:layout_constraintHorizontal_bias="0.813"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/activity_name_text_view"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>